<Window x:Class="kursova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Editor" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Open" Width="100" Margin="5" Click="OpenButton_Click" />
            <Button Content="Edit" Width="100" Margin="5" Click="EditButton_Click" />
            <Button Content="Save" Width="100" Margin="5" Click="SaveButton_Click" />
            <Button Content="Save As" Width="100" Margin="5" Click="SaveAsButton_Click" />
            <Button Content="Convert" Width="100" Margin="5" Click="ConvertButton_Click" />
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
            <TextBox x:Name="EditorTextBox" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" />
        </Border>
    </Grid>

    <!-- Панель інструментів для редагування тексту -->

</Window>
